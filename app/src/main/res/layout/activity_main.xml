<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="200dp"
    android:paddingHorizontal="60dp"
    tools:context=".MainActivity">

  <TableRow>
      <EditText
          android:id="@+id/edit"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:hint="입력"
          android:layout_span="4" />
  </TableRow>
  <TableRow>
      <Button
          android:id="@+id/btn1"
          android:layout_width="50dp"
          android:layout_height="80dp"
          android:layout_weight="1"
          android:layout_margin="1dp"
          android:backgroundTint="#808080"
          android:text="1"/>
      <Button
          android:id="@+id/btn2"
          android:layout_width="50dp"
          android:layout_height="80dp"
          android:layout_weight="1"
          android:layout_margin="1dp"
          android:backgroundTint="#808080"
          android:text="2"/>
      <Button
          android:id="@+id/btn3"
          android:layout_width="50dp"
          android:layout_height="80dp"
          android:layout_weight="1"
          android:layout_margin="1dp"
          android:backgroundTint="#808080"
          android:text="3"/>
      <Button
          android:id="@+id/add"
          android:layout_width="50dp"
          android:layout_height="80dp"
          android:layout_weight="1"
          android:layout_margin="1dp"
          android:backgroundTint="#808080"
          android:text="+"/>
  </TableRow>
    <TableRow>
        <Button
            android:id="@+id/btn4"
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_margin="1dp"
            android:backgroundTint="#808080"
            android:text="4"/>
        <Button
            android:id="@+id/btn5"
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_margin="1dp"
            android:backgroundTint="#808080"
            android:text="5"/>
        <Button
            android:id="@+id/btn6"
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_margin="1dp"
            android:backgroundTint="#808080"
            android:text="6"/>
        <Button
            android:id="@+id/sub"
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_margin="1dp"
            android:backgroundTint="#808080"
            android:text="-"/>
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/btn7"
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_margin="1dp"
            android:backgroundTint="#808080"
            android:text="7"/>
        <Button
            android:id="@+id/btn8"
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_margin="1dp"
            android:backgroundTint="#808080"
            android:text="8"/>
        <Button
            android:id="@+id/btn9"
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_margin="1dp"
            android:backgroundTint="#808080"
            android:text="9"/>
        <Button
            android:id="@+id/mul"
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_margin="1dp"
            android:backgroundTint="#808080"
            android:text="x"/>
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/btn0"
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_margin="1dp"
            android:backgroundTint="#808080"
            android:text="0"/>
        <Button
            android:id="@+id/clear"
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_margin="1dp"
            android:backgroundTint="#808080"
            android:text="C"/>
        <Button
            android:id="@+id/enter"
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_margin="1dp"
            android:backgroundTint="#808080"
            android:text="="/>
        <Button
            android:id="@+id/div"
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_margin="1dp"
            android:backgroundTint="#808080"
            android:text="/"/>
    </TableRow>


</TableLayout>